{
  "name": "gloom",
  "version": "0.1.0",
  "description": "The Dungeons of Gloom.",
  "main": "server.js",
  "scripts": {
    "start": "node ./server.js",
    "watch": "watchify src/client/game/game.js -o public/js/game.js -v",
    "browserify": "browserify src/game/game.js | uglifyjs > public/js/game.js",
    "build": "npm run browserify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sjhogan/gloom.git"
  },
  "keywords": [
    "game",
    "roguelike"
  ],
  "author": "Steve Hogan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sjhogan/gloom/issues"
  },
  "homepage": "https://github.com/sjhogan/gloom#readme",
  "dependencies": {
    "good": "^6.6.0",
    "good-console": "^5.3.1",
    "handlebars": "^4.0.5",
    "hapi": "^13.0.0",
    "inert": "^3.2.0",
    "lodash": "^4.6.1",
    "rot-js": "^0.6.2",
    "vision": "^4.0.1"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0"
  },

  "browserify": {
    "transform": [
      [ "babelify", { "presets": [ "es2015" ] } ]
    ]
  }
}
